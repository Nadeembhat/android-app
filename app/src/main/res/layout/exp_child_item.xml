<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/carpentry_text"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        >

        <RadioButton
            android:id="@+id/button_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/radio_selector"
            android:text="> 3 months experience"
            android:textColor="@color/darkTeal"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp"
            />

        <RadioButton
            android:id="@+id/button_six"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/radio_selector"
            android:text="> 6 months experience"
            android:textColor="@color/darkTeal"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp"
            />

        <RadioButton
            android:id="@+id/button_year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/radio_selector"
            android:text="> 1 year experience"
            android:textColor="@color/darkTeal"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp"
            />

        <RadioButton
            android:id="@+id/button_redseal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/radio_selector"
            android:text="Red seal"
            android:textColor="@color/darkTeal"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# of workers"
        android:textColor="@color/darkTeal"
        android:id="@+id/workerNum"
        android:textSize="18sp"
        android:layout_below="@id/radio_group"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:inputType="number"
        android:id="@+id/edit_worker_num"
        android:hint=""
        android:textSize="18sp"
        android:textAlignment="textEnd"
        android:layout_alignBottom="@id/workerNum"
        android:layout_alignParentEnd="true" />

</RelativeLayout>