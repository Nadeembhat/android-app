<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="50dp"
    android:background="@color/md_white_1000"
    tools:context="com.labourtoday.androidapp.contractor.HiringGridActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22sp"
        android:fontFamily="sans-serif-black"
        android:id="@+id/text_type_worker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:id="@+id/checkbox_availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_type_worker"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        >

        <RadioButton
            android:id="@+id/button_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/radio_selector"
            android:text="> 6 months experience"
            android:textColor="@color/darkTeal"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp"
            />

        <RadioButton
            android:id="@+id/button_six"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/radio_selector"
            android:text="> 1 year experience"
            android:textColor="@color/darkTeal"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp"
            />

        <RadioButton
            android:id="@+id/button_year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/radio_selector"
            android:text="> 2 years experience"
            android:textColor="@color/darkTeal"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp"
            />

        <RadioButton
            android:id="@+id/button_redseal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/radio_selector"
            android:text="Red Seal"
            android:textColor="@color/darkTeal"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp" />
    </RadioGroup>

</RelativeLayout>



