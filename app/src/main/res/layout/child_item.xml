<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/jobAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/jobDescription"
        android:layout_below="@id/jobAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/jobDuration"
        android:layout_below="@id/jobDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:textSize="18sp"
        android:textColor="@color/lightTeal"
        android:id="@+id/button_decline"
        android:background="@null"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/jobDuration"
        android:layout_toStartOf="@+id/button_accept" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textSize="18sp"
        android:textColor="@color/lightTeal"
        android:background="@null"
        android:layout_alignTop="@+id/button_decline"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_accept" />

</RelativeLayout>