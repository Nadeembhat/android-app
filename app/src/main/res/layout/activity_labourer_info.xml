<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/md_white_1000"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top_level_layout"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.labourtoday.androidapp.labourer.LabourerInfoActivity">

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"
                android:id="@+id/linearLayout"
                android:orientation="horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 3 of 5"
                android:textAlignment="center"
                android:textSize="12sp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/text_step"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What city do you live in?"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/text1"
                android:textColor="@color/teal"
                android:layout_below="@id/text_step"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:hint="City e.g. Burnaby, Vancouver..."
                android:ems="10"
                android:id="@+id/edit_city"
                android:textColor="@color/teal"
                android:layout_below="@id/text1"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What days are you available?"
                android:textAlignment="center"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/text2"
                android:textColor="@color/teal"
                android:layout_below="@id/edit_city"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/radio_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/chkMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Monday" />
                <CheckBox
                    android:id="@+id/chkTues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Tuesday" />
                <CheckBox
                    android:id="@+id/chkWed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Wednesday" />
                <CheckBox
                    android:id="@+id/chkThurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Thursday" />
                <CheckBox
                    android:id="@+id/chkFri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Friday" />
                <CheckBox
                    android:id="@+id/chkSat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Saturday" />
                <CheckBox
                    android:id="@+id/chkSun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Sunday" />
                <CheckBox
                    android:id="@+id/chkVary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:checked="true"
                    android:text="Varies" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you like to be notified for jobs?"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/text3"
                android:textColor="@color/teal"
                android:layout_below="@id/radio_experience"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/checkboxes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/chkText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Text" />
                <CheckBox
                    android:id="@+id/chkCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:text="Phone call" />
                <CheckBox
                    android:id="@+id/chkEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textSize="18sp"
                    android:checked="true"
                    android:text="Email" />

            </LinearLayout>

        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="NEXT STEP"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/outline_rectangle_teal"
            android:id="@+id/button_next"
            android:onClick="next"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>