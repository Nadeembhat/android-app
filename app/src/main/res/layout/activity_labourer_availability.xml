<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:id="@+id/top_layout">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top_level_layout"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkTeal"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.labourtoday.androidapp.labourer.LabourerAvailability">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What days are you available?"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/text1"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>

            <Switch
                android:id="@+id/now"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Available Immediately"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:thumbTint="@color/teal"
                android:trackTint="@color/teal"
                android:layout_below="@id/text1"
                android:layout_marginBottom="20dp"/>

            <Switch
                android:id="@+id/mon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:thumbTint="@color/teal"
                android:trackTint="@color/teal"
                android:layout_below="@id/now"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"/>

            <Switch
                android:id="@+id/tues"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:thumbTint="@color/teal"
                android:trackTint="@color/teal"
                android:layout_below="@id/mon"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"/>

            <Switch
                android:id="@+id/wed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:thumbTint="@color/teal"
                android:trackTint="@color/teal"
                android:layout_below="@id/tues"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"/>

            <Switch
                android:id="@+id/thurs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:thumbTint="@color/teal"
                android:trackTint="@color/teal"
                android:layout_below="@id/wed"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"/>

            <Switch
                android:id="@+id/fri"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:thumbTint="@color/teal"
                android:trackTint="@color/teal"
                android:layout_below="@id/thurs"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"/>

            <Switch
                android:id="@+id/sat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:thumbTint="@color/teal"
                android:trackTint="@color/teal"
                android:layout_below="@id/fri"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"/>

            <Switch
                android:id="@+id/sun"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:thumbTint="@color/teal"
                android:trackTint="@color/teal"
                android:layout_below="@id/sat"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have a hard hat?"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/text2"
                android:layout_below="@id/sun"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"/>

            <RadioGroup
                android:id="@+id/hat_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                >

            <RadioButton
                android:id="@+id/yes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawablePadding="30dp"
                android:drawableEnd="@drawable/radio_selector"
                android:text="Yes"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:gravity="start|center_vertical"
                android:layout_marginTop="15dp"
                />

            <RadioButton
                android:id="@+id/no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawablePadding="30dp"
                android:drawableEnd="@drawable/radio_selector"
                android:text="No"
                android:textColor="@color/darkTeal"
                android:textSize="18sp"
                android:gravity="start|center_vertical"
                android:layout_marginTop="15dp"
                />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have a safety vest?"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/text3"
                android:layout_below="@id/hat_radio"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"/>

            <RadioGroup
                android:id="@+id/vest_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                >

                <RadioButton
                    android:id="@+id/yes_vest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawablePadding="30dp"
                    android:drawableEnd="@drawable/radio_selector"
                    android:text="Yes"
                    android:textColor="@color/darkTeal"
                    android:textSize="18sp"
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="15dp"
                    />

                <RadioButton
                    android:id="@+id/no_vest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawablePadding="30dp"
                    android:drawableEnd="@drawable/radio_selector"
                    android:text="No"
                    android:textColor="@color/darkTeal"
                    android:textSize="18sp"
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="15dp"
                    />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have a tool belt with basic tools?"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/text4"
                android:layout_below="@id/vest_radio"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"/>

            <RadioGroup
                android:id="@+id/tool_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                >

                <RadioButton
                    android:id="@+id/yes_tool"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawablePadding="30dp"
                    android:drawableEnd="@drawable/radio_selector"
                    android:text="Yes"
                    android:textColor="@color/darkTeal"
                    android:textSize="18sp"
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="15dp"
                    />

                <RadioButton
                    android:id="@+id/no_tool"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawablePadding="30dp"
                    android:drawableEnd="@drawable/radio_selector"
                    android:text="No"
                    android:textColor="@color/darkTeal"
                    android:textSize="18sp"
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="15dp"
                    />
            </RadioGroup>

            <Button
                android:layout_width="242dp"
                android:layout_height="44dp"
                android:text="Next"
                android:textColor="@color/md_white_1000"
                android:background="@drawable/outline_rectangle_teal"
                android:id="@+id/button_next"
                android:onClick="updateAvailability"
                android:textSize="22sp"
                android:layout_below="@id/tool_radio"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>